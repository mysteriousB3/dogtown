@model dog7.Security.SignInModel

  
<div class="row">
    <div class="col-md-4">
        @if(@ViewBag.error){
            <div class="bg-danger">@ViewBag.message</div>
        }
        <section>
            <form asp-controller="security" method="post" asp-action="login"  asp-route-returnUrl="@ViewBag.ReturnUrl" >
                <h4>กรอกอีเมลและรหัสผ่าน</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label  >อีเมล</label>
                    <input id="e" asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>รหัสผ่าน</label>
                    <input id="p" asp-for="password" type="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label  >จดจำรหัสผ่าน</label>
                            <input asp-for="rememberMe"/>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">เข้าสู่ระบบ</button>
                    @* <button onclick="doLogin();" class="btn btn-primary">เข้าสู่ระบบ</button> *@
                    @* <a type="button" onclick="doLogin();" style="color: white;"  class="btn btn-primary">เข้าสู่ระบบ</a> *@
                    <a class="btn btn-success" href="/security/register">สมัครตอนนี้เลย</a>
                </div>                
            </form>
        </section>
    </div>
 
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function doLogin(){
            var id = document.getElementById("e").value;
            var password = document.getElementById("p").value;
            if(id=="" || password==""){
                alert("ข้อมูลไม่ครบถ้วน กรุณาเช็คความครบถ้วนของข้อมูล");
            }//econ
            else{

            }
        }//ef
    </script>
}
